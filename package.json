{
  "name": "bemed-components",
  "version": "1.0.2",
  "description": "BEM-flavored components",
  "main": "./lib/bemed.js",
  "repository": "https://github.com/vkalinichev/bemed-components.git",
  "author": "Vladimir Kalinichev <wrumly@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest",
    "build": "babel src --out-dir lib",
    "prepublish": "npm run test && npm run clean && npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-react": "^7.0.1",
    "jest": "^20.0.4",
    "react": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "jest"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "jest/globals": true
    },
    "rules": {
      "no-console": "warn",
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "semi": [
        "error",
        "never"
      ],
      "react/prop-types": 0
    }
  }
}
